<Cadastro>:
    orientation: 'vertical'
    spacing: 10
    BoxLayout:
        orientation: 'vertical'
        spacing: 15
        padding: 10
        Label:
            text: 'Insira o nome'
            halign: 'left'
            color: 0, 0, 0, 1
        TextInput:
            id: nome
            multiline: False
            input_filter: 'string'
        Label:
            text: 'Insira o saldo da carteira'
            halign: 'left'
            color: 0, 0, 0, 1
        TextInput:
            id: saldo
            multiline: False
            input_filter: 'float'
        Button:
            font_size: 22
            size_hint_y: 1.3
            text: 'Cadastrar'
            on_release: root.cadastrar()
    Label:
        id: resposta
        color: 0, 0, 0, 1
        font_size: 22